.Table {
  color: var(--theme-lightest);
  padding: 0 0.5rem;
}

.TableItem {
  background: var(--color-blue-base);
  padding: 0.5rem;
  margin: 0.25rem;
}

.TableItemRecords {
  display: flex;
  align-items: center;
  justify-content: center;
}

.TableItemRecords > p {
  background: white;
  color: var(--color-blue-dark);
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 0.5rem;
  margin: 0.25rem;
}
